<h1 class="text-2xl">{{ shop.name }}</h1>
<div class="flex flex-col items-center justify-center gap-12">
  <span class="text-5xl">{{ section.settings.not_found_title }}</span>
  <span class="text-2xl">{{ section.settings.not_found_subtext }}</span>
</div>
<button class="bg-lime-300 py-4 px-8 rounded-lg">
  <a href={{ shop.secure_url }} class="text-slate-600">{{ section.settings.button_home }}</a>
</button>


{% schema %}
{
  "name": "Template 404",
  "tag": "div",
  "class": "container flex flex-col items-center jus tify-start gap-16",
  "settings": [
    {
      "type": "text",
      "id": "not_found_title",
      "label": "404 Title",
      "default": "404 Not Found"
    },
    {
      "type": "text",
      "id": "not_found_subtext",
      "label": "404 Subtext",
      "default": "The page you were looking for does not exist"
    },
    {
      "type": "text",
      "id": "button_home",
      "label": "Redirect Button",
      "default": "Back to Homepaf"
    }
  ]
}
{% endschema %}